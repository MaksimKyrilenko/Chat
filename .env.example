# ===========================================
# UltraChat Environment Variables
# ===========================================

# General
NODE_ENV=development

# JWT Secrets (generate strong random strings for production)
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_REFRESH_SECRET=your-refresh-secret-key-change-in-production

# MySQL
MYSQL_HOST=localhost
MYSQL_PORT=3307
MYSQL_USER=ultrachat
MYSQL_PASSWORD=ultrachat_pass
MYSQL_ROOT_PASSWORD=ultrachat_root
MYSQL_DATABASE=ultrachat

# MongoDB
MONGO_USER=ultrachat
MONGO_PASSWORD=ultrachat_pass
MONGODB_URI=mongodb://ultrachat:ultrachat_pass@localhost:27017/ultrachat?authSource=admin

# Redis
REDIS_PASSWORD=ultrachat_redis
REDIS_URL=redis://:ultrachat_redis@localhost:6379

# NATS
NATS_URL=nats://localhost:4222

# MinIO
MINIO_USER=ultrachat
MINIO_PASSWORD=ultrachat_minio
MINIO_ENDPOINT=localhost
MINIO_PORT=9000

# ElasticSearch
ELASTICSEARCH_URL=http://localhost:9200

# Firebase (for push notifications)
FIREBASE_PROJECT_ID=
FIREBASE_PRIVATE_KEY=
FIREBASE_CLIENT_EMAIL=

# CORS
CORS_ORIGINS=http://localhost:8080,http://localhost:3000

# Frontend
VITE_API_URL=http://localhost:3000
VITE_WS_URL=ws://localhost:3000
