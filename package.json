{
  "name": "ultrachat",
  "version": "1.0.0",
  "private": true,
  "description": "Modern Web Messenger",
  "scripts": {
    "predev": "node -e \"const fs=require('fs');const dirs=['apps/gateway','apps/services/auth','apps/services/messages','apps/services/files','apps/services/webrtc','apps/services/notifications','apps/web'];dirs.forEach(d=>{try{fs.copyFileSync('.env',d+'/.env')}catch(e){}})\"",
    "dev": "turbo run dev --parallel",
    "dev:web": "pnpm --filter @ultrachat/web dev",
    "dev:gateway": "pnpm --filter @ultrachat/gateway dev",
    "dev:auth": "pnpm --filter @ultrachat/auth-service dev",
    "dev:messages": "pnpm --filter @ultrachat/messages-service dev",
    "build": "turbo run build",
    "build:shared": "pnpm --filter @ultrachat/shared build",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,vue,js,json,md}\"",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "clean": "rimraf **/node_modules **/dist **/.turbo"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "eslint": "^8.55.0",
    "prettier": "^3.1.0",
    "rimraf": "^5.0.0",
    "turbo": "^1.11.0",
    "typescript": "^5.3.0"
  },
  "packageManager": "pnpm@8.12.0",
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=8.0.0"
  }
}
